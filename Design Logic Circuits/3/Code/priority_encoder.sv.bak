`timescale 1ns/1ns
module priority_encoder(input [3:0] in, output [1:0] out, output en);
 reg [1:0] out;
 reg en;

 always @(in)
 begin
  en = 1;
  casex(in)
   4'bxxx1: out = 2'd0;
   4'bxx10: out = 2'd1;
   4'bx100: out = 2'd2;
   4'b1000: out = 2'd3;
   default: begin
    en = 0;
    out = 2'bxx;
   end
  endcase
 end
endmodule
